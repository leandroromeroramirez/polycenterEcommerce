# Docker Environment Configuration for Bagisto
# Copy this file to .env and adjust values as needed

# Application
APP_NAME=Bagisto
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
APP_ADMIN_URL=admin
APP_TIMEZONE=UTC

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
APP_CURRENCY=USD

# Database Configuration (Docker MySQL)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=bagisto
DB_USERNAME=bagisto
DB_PASSWORD=secret
DB_PREFIX=

# Redis Configuration (Docker Redis)
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# Cache and Session Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=redis

# File System
FILESYSTEM_DISK=public

# Mail Configuration (Docker Mailpit)
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=shop@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Admin Configuration
ADMIN_MAIL_ADDRESS=admin@example.com
ADMIN_MAIL_NAME=Admin

# Contact Configuration
CONTACT_MAIL_ADDRESS=
CONTACT_MAIL_NAME=

# Elasticsearch Configuration (Docker Elasticsearch)
SCOUT_DRIVER=elasticsearch
ELASTICSEARCH_HOST=elasticsearch:9200
ELASTICSEARCH_INDEX=bagisto

# Response Cache
RESPONSE_CACHE_ENABLED=true

# Docker-specific ports (modify as needed)
APP_PORT=80
FORWARD_DB_PORT=3306
FORWARD_REDIS_PORT=6379
FORWARD_ES_PORT=9200
FORWARD_KIBANA_PORT=5601
FORWARD_MAILPIT_PORT=1025
FORWARD_MAILPIT_DASHBOARD_PORT=8025

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"
VITE_HOST=0.0.0.0
VITE_PORT=5173

# Docker User Configuration (Linux/Mac)
WWWUSER=1000
WWWGROUP=1000

# Debug Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# AWS Configuration (if using S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Optional Services
# Uncomment to enable specific services
# COMPOSE_PROFILES=analytics,mail
